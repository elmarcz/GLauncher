    <div class="container-games o-hidden">
      <h1>Add a Game</h1>
      <form class="container-options" action="/addGame" method="post">
        <a class="element dashed" href="/gameImg">
          <img
            src="./img/IconPlus.png"
            class="iconPlus"
          />
        </a>
        <input
          type="text"
          placeholder="Name"
          autocomplete="off"
          name="name"
          class="input"
        />
        <input
          type="text"
          placeholder="URL"
          autocomplete="off"
          name="url"
          class="input"
        />
        <input type="submit" class="save-button" value="Save"></input>
      </form>
    </div>